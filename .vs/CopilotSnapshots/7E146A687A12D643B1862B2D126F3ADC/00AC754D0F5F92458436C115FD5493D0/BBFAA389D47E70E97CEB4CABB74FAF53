from django.urls import path
from django.contrib.auth import views as auth_views
from . import views

app_name = 'feedback'

urlpatterns = [
    # Public URLs
    path('', views.public_session_list, name='public_session_list'),
    path('session/<int:session_id>/feedback/', views.submit_feedback, name='submit_feedback'),
    path('success/', views.feedback_success, name='feedback_success'),
    
    # Registration and password reset
    path('register/', views.register, name='register'),
    path('password-reset/', auth_views.PasswordResetView.as_view(template_name='registration/password_reset_form.html'), name='password_reset'),
    path('password-reset/done/', auth_views.PasswordResetDoneView.as_view(template_name='registration/password_reset_done.html'), name='password_reset_done'),
    path('reset/<uidb64>/<token>/', auth_views.PasswordResetConfirmView.as_view(template_name='registration/password_reset_confirm.html'), name='password_reset_confirm'),
    path('reset/done/', auth_views.PasswordResetCompleteView.as_view(template_name='registration/password_reset_complete.html'), name='password_reset_complete'),
    
    # Admin URLs
    path('dashboard/', views.dashboard, name='dashboard'),
    path('sessions/', views.session_list, name='session_list'),
    path('sessions/create/', views.create_session, name='create_session'),
    path('sessions/<int:session_id>/', views.session_detail, name='session_detail'),
    path('sessions/<int:session_id>/report/', views.report_detail, name='report_detail'),
    path('sessions/<int:session_id>/generate-report/', views.generate_report, name='generate_report'),
    path('sessions/<int:session_id>/download-report/', views.download_report, name='download_report'),
    path('sessions/<int:session_id>/download-feedback-qr/', views.download_feedback_qr, name='download_feedback_qr'),
    
    # Trainer management
    path('trainers/', views.trainer_list, name='trainer_list'),
    path('trainers/create/', views.create_trainer, name='create_trainer'),
    path('trainers/<int:trainer_id>/edit/', views.edit_trainer, name='edit_trainer'),
    path('sessions/<int:session_id>/delete/', views.delete_session, name='delete_session'),
    path('sessions/<int:session_id>/report-email/', views.session_report_email, name='session_report_email'),
    path('upload-image/', views.upload_feedback_image, name='upload_feedback_image'),
    path('feedback/summary/', views.feedback_summary, name='feedback_summary'),
]
